--> {"jsonrpc": "2.0", "method": "SEND_TEXT_MESSAGE", "params": {"room": "Room 1", "user": "user 1", "message":"Example text message"}, "id": 2}
<-- {"jsonrpc": "2.0", "result": {"code":"DELIVERED","message":"Message Delivered"}, "id": 2}

end legend


@enduml